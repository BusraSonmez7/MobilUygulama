<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplan">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/kitap_resmi"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@id/textView5"
        app:layout_constraintTop_toTopOf="@id/textView5"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/kitapadi"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:gravity="left"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/textView5"
        app:layout_constraintStart_toEndOf="@+id/kitap_resmi"
        app:layout_constraintTop_toBottomOf="@+id/txtkadi" />

    <TextView
        android:id="@+id/kitapyazari"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:gravity="left"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/textView5"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@+id/kitap_resmi"
        app:layout_constraintTop_toBottomOf="@+id/txtkadi2" />

    <TextView
        android:id="@+id/kitapturu"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:gravity="left"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/textView5"
        app:layout_constraintStart_toEndOf="@+id/txtkadi4"
        app:layout_constraintTop_toBottomOf="@+id/kitapyazari" />

    <TextView
        android:id="@+id/kitapdurumu"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:gravity="left"
        android:textColor="@color/soz_rengi"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/textView5"
        app:layout_constraintStart_toEndOf="@+id/txtkadi5"
        app:layout_constraintTop_toBottomOf="@+id/kitapturu" />

    <TextView
        android:id="@+id/txtkadi"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Kitap Adı"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/textView5"
        app:layout_constraintStart_toEndOf="@+id/kitap_resmi"
        app:layout_constraintTop_toTopOf="@id/textView5" />

    <TextView
        android:id="@+id/txtkadi2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="Yazarı"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/textView5"
        app:layout_constraintStart_toEndOf="@+id/kitap_resmi"
        app:layout_constraintTop_toBottomOf="@+id/kitapadi" />

    <TextView
        android:id="@+id/txtkadi4"
        android:layout_width="33dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Türü:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/kitap_resmi"
        app:layout_constraintTop_toBottomOf="@+id/kitapyazari" />

    <TextView
        android:id="@+id/txtkadi5"
        android:layout_width="47dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Durum:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/kitap_resmi"
        app:layout_constraintTop_toBottomOf="@+id/txtkadi4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sari"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@id/textView5"
        app:layout_constraintStart_toStartOf="@id/textView5" />


</androidx.constraintlayout.widget.ConstraintLayout>